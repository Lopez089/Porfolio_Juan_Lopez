---
import Logo from "@components/logo.astro";
import Nav from "@components/nav.astro";
import Container from "@components/container.astro";
---

<header id="header" class=" relative">
  <div id="header-container" class="py-10 z-40 bg-white animate-openNav ">
  <Container>
    <div class="md:flex md:justify-between md:items-center">
      <div id="container-icons" class="flex justify-between w-full md:w-auto">
        <Logo />
        <div class="md:hidden">
          <span
          id="iconClose"
          class="z-50 material-symbols-outlined text-3xl cursor-pointer hidden"
          >
            close
          </span>
          <span
          id="iconMenu"
          class="material-symbols-outlined text-3xl cursor-pointer"
          >
            menu
          </span>
        </div>
      </div>
      <div id="nav-container" class="pt-36 hidden md:flex md:pt-0 md:items-center">
        <Nav/>
      </div>
    </div>
    </Container>
  </div>
</header>
