---
const { icon, secondary, type, href } = Astro.props;
---

<button
  class=`font-sans rounded-2xl py-2 px-6   w-full md:w-auto md:justify-center md:flex items-center gap-2 ${secondary ? 'bg-white  border-2 border-primary text-primary' : 'bg-primary text-white'} ${type=== 'sm' ? 'text-sm':null}`
  >
  <slot />
  <span class="material-symbols-outlined text-base"> {icon} </span>
</button>
